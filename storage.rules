rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 内見写真: 認証済みユーザーのみ読み書き可能（家族間共有）
    match /photos/{docId}/{photoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024  // 最大 10MB
                   && request.resource.contentType.matches('image/.*');
    }

    // 間取り図画像: 認証済みユーザーのみ読み取り可能
    // 書き込みは Admin SDK（スクレイピングパイプライン）のみ
    // ※ ダウンロード URL にトークンが含まれるため、AsyncImage からも直接読み込み可能
    match /floor_plans/{imageId} {
      allow read: if request.auth != null;
    }

    // SUUMO 物件写真: 認証済みユーザーのみ読み取り可能
    // 書き込みは Admin SDK（スクレイピングパイプライン）のみ
    match /property_images/{imageId} {
      allow read: if request.auth != null;
    }
  }
}

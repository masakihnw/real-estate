rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 内見写真: 認証済みユーザーのみ読み書き可能（家族間共有）
    match /photos/{docId}/{photoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024  // 最大 10MB
                   && request.resource.contentType.matches('image/.*');
    }

    // 間取り図画像: 公開読み取り可能
    // 書き込みは Admin SDK（スクレイピングパイプライン）のみ
    // ※ SUUMO/HOME'S の公開物件写真を Firebase Storage にキャッシュしたもの。
    //    ダウンロードトークンが無効化されると AsyncImage から 403 になるため、
    //    認証不要の公開読み取りに変更（2026-02-16）。
    match /floor_plans/{imageId} {
      allow read: if true;
    }

    // SUUMO 物件写真: 公開読み取り可能
    // 書き込みは Admin SDK（スクレイピングパイプライン）のみ
    // ※ 上記と同じ理由で公開読み取りに変更。
    match /property_images/{imageId} {
      allow read: if true;
    }
  }
}
